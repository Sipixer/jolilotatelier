---
// FooterGreen.astro
---

<footer class="bg-primary text-white">
  <div class="max-w-7xl mx-auto w-full px-8 md:px-16 lg:px-24 py-20">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-x-8 gap-y-16">
      <!-- Logo Section -->
      <div class="md:col-span-4">
        <div class="text-white">
          <h1 class="text-7xl font-light tracking-normal">
            <span
              class="transition-transform hover:translate-y-[-3px] inline-block duration-300"
              >j</span
            >
            <span
              class="transition-transform hover:translate-y-[-3px] inline-block duration-300 delay-[50ms]"
              >o</span
            >
            <span
              class="transition-transform hover:translate-y-[-3px] inline-block duration-300 delay-100"
              >l</span
            >
            <span
              class="transition-transform hover:translate-y-[-3px] inline-block duration-300 delay-150"
              >i</span
            >
            <span
              class="transition-transform hover:translate-y-[-3px] inline-block duration-300 delay-200"
              >l</span
            >
            <span
              class="transition-transform hover:translate-y-[-3px] inline-block duration-300 delay-[250ms]"
              >o</span
            >
            <span
              class="transition-transform hover:translate-y-[-3px] inline-block duration-300 delay-300"
              >t</span
            >
          </h1>
          <p class="text-sm tracking-widest uppercase mt-2 ml-1">ATELIER</p>
        </div>
      </div>

      <!-- Services Section -->
      <div class="md:col-span-3">
        <h2 class="text-lg font-light uppercase mb-6 pb-2 tk-larken">
          Les Services
        </h2>
        <ul class="space-y-3">
          <li>
            <a href="#" class="group block">
              <span class="inline-block relative">
                IDENTITÉ VISUELLE / LOGO
                <span
                  class="absolute left-0 bottom-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"
                ></span>
              </span>
            </a>
          </li>
          <li>
            <a href="#" class="group block">
              <span class="inline-block relative">
                SUPPORTS PRINT / PACKAGING
                <span
                  class="absolute left-0 bottom-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"
                ></span>
              </span>
            </a>
          </li>
          <li>
            <a href="#" class="group block">
              <span class="inline-block relative">
                SITE INTERNET VITRINE
                <span
                  class="absolute left-0 bottom-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"
                ></span>
              </span>
            </a>
          </li>
          <li>
            <a href="#" class="group block">
              <span class="inline-block relative">
                CONTENUS MÉDIAS SOCIAUX
                <span
                  class="absolute left-0 bottom-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"
                ></span>
              </span>
            </a>
          </li>
        </ul>
      </div>

      <!-- En Savoir Plus -->
      <div class="md:col-span-2">
        <h2 class="text-lg font-light uppercase mb-6 pb-2 tk-larken">
          En Savoir Plus
        </h2>
        <ul class="space-y-4">
          <li>
            <a href="#" class="group block">
              <span class="inline-block relative">
                À PROPOS
                <span
                  class="absolute left-0 bottom-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"
                ></span>
              </span>
            </a>
          </li>
          <li>
            <a href="#" class="group block">
              <span class="inline-block relative">
                CONTACT
                <span
                  class="absolute left-0 bottom-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"
                ></span>
              </span>
            </a>
          </li>
        </ul>
      </div>

      <!-- Adresse -->
      <div class="md:col-span-3">
        <h2 class="text-lg font-light uppercase mb-6 pb-2 tk-larken">
          Adresse
        </h2>
        <address class="not-italic space-y-1 font-extralight">
          <p>148 Grand Rue</p>
          <p>46500 ALVIGNAC, LOT (46)</p>
          <p class="font-normal">OCCITANIE, FRANCE</p>
        </address>
      </div>
    </div>
  </div>
</footer>
