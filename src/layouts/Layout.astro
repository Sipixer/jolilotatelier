---
import BookAProject from './BookAProject.astro';
import Footer from './Footer.astro';
import Header from './Header.astro';
import ScrollToTop from './ScrollToTop.astro';
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Que vous ayez besoin de supports imprimés, de sites vitrines, d’identités de marque ou de contenu digital, Jolilot Atelier est là pour vous accompagner."
    />
    <meta
      name="keywords"
      content="supports imprimés, sites vitrines, identités de marque, contenu digital, Jolilot, Agence, créative, Jolilot Atelier, Lot, communication"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <meta name="generator" content="Jolilot Atelier" />
    <title>{'JOLILOT Atelier | Agence créative'}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.6.0/css/glide.core.css" />
  </head>
  <body class="flex flex-col bg-background font-extralight text-xs">
    <Header />
    <BookAProject />
    <ScrollToTop />
    <slot />
    <Footer />
  </body>
  <style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
    /* @import url('https://use.typekit.net/oxc7dzr.css'); */

    @import url('https://use.typekit.net/kia8cjc.css');

    @font-face {
      font-family: 'Larken';
      font-display: swap;
    }

    :root {
      font-family: 'Poppins', Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
      font-synthesis: none;
      text-rendering: optimizeLegibility;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      -webkit-text-size-adjust: 100%;
      -moz-text-size-adjust: 100%;
      -ms-text-size-adjust: 100%;
      text-size-adjust: 100%;
      scroll-behavior: smooth;
    }
    * {
      cursor:
        url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="orange" opacity="0.8"><circle cx="16" cy="16" r="10"/></svg>')
          16 16,
        auto;
    }

    ::-webkit-scrollbar {
      width: 5px;
    }

    ::-webkit-scrollbar-thumb {
      background-color: #ccc;
      border-radius: 5px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background-color: #aaa;
    }

    .vertical-text {
      writing-mode: vertical-rl;
      transform: rotate(180deg);
    }
  </style>
</html>
