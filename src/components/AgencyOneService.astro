---
import Button from './subcomponents/Button.astro';
import SubTitle from './subcomponents/SubTitle.astro';

export type OneService = {
    color: string;
    number: string;
    title: string;
    subtitle: string;
    description: string[];
    benefits: {
        title: string;
        description: string[];
    }[];
};

export type Props = {
    oneService: OneService;
};

const { oneService } = Astro.props;
---

<div>
    <SubTitle title="des services, rien que pour vous !" />
    <div class="relative flex w-full flex-col items-center">
        <div class="mb-20 grid w-full max-w-[1800px] grid-cols-1 gap-y-24 px-20 md:grid-cols-2 xl:grid-cols-3">
            <div class="flex gap-6 text-black/90 md:border-r-2 border-black md:pr-12">
                <div class="flex flex-col gap-3 font-larken">
                    <p class="text-6xl" style={`color: ${oneService.color};`}>{oneService.number}</p>
                    <p class="text-xl" style={`color: ${oneService.color};`}>{oneService.title}</p>
                    <p class="font-poppins text-xs font-normal italic text-subtitlecard">{oneService.subtitle}</p>
                    <div class="flex flex-col gap-0">
                        {oneService.description.map((item) => <p class="font-poppins text-sm">{item}</p>)}
                    </div>
                    <Button text="réserver un projet" variant="dark" url="#contact-form" />
                </div>
            </div>
            {
                oneService.benefits.map((benefit) => (
                    <div class="flex flex-col gap-4 text-primary benefits-item">
                        <div class="flex flex-col gap-1">
                            <h4 class="text-lg font-larken uppercase text-primary">{benefit.title}</h4>
                        </div>
                        <div class="flex flex-col pr-5 text-sm text-text">
                            {benefit.description.map((item) => (
                                <p>{item}</p>
                            ))}
                        </div>
                        <Button text="c’est ce qu’il me faut !" url="#contact-form" />
                    </div>
                ))
            }
        </div>
    </div>
</div>

<style>
    @media (min-width: 1280px) {
        .benefits-item:nth-child(3n + 1) {
            padding-left: 0rem;
        }
    }
    @media (min-width: 768px) {
        .benefits-item:nth-child(2n + 1) {
            padding-left: 0rem;
        }
        .benefits-item {
            padding-left: 3rem;
        }
    }

    .benefits-item {
        padding-right: 3rem;
    }
</style>
