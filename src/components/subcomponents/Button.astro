---
export type Props = {
  url: string;
  text: string;
  color?: string;
};

const { url, text, color } = Astro.props;
---

<a
  class="mt-2 w-fit border border-black/20 px-6 py-2 font-poppins text-sm text-black/60 transition ease-in-out hover:bg-marron_fonce hover:text-white"
  href={url}
  style={`color: ${color};border-color: ${color};`}
>
  {text}
</a>
